<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:bottomLeftRadius="100dp"
                android:topLeftRadius="100dp"
                android:topRightRadius="200dp"
                android:bottomRightRadius="200dp"
                />
            <stroke android:width="3dip" android:color="@color/marron_opciones" />
            <solid android:color="#0074BD" />
            <gradient android:angle="-90" android:startColor="@color/marron_opciones2" android:endColor="@color/marron_opciones"></gradient>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:bottomLeftRadius="100dp"
                android:topLeftRadius="100dp"
                android:topRightRadius="200dp"
                android:bottomRightRadius="200dp"
                />
            <stroke android:width="3dip" android:color="@color/gris" />
            <solid android:color="#0074BD" />
            <gradient android:angle="-90" android:startColor="@color/gris" android:endColor="@color/marron_opciones"></gradient>
        </shape>
    </item>


</selector>