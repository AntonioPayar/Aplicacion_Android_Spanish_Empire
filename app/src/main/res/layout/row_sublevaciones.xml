<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewrowSubId"
        android:textColor="#070707"
        android:layout_marginLeft="20dp"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewrowSubPais"
        android:textColor="#070707"
        android:textSize="30sp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/textViewrowSubId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewrowSubHora"
        android:textColor="#070707"
        android:textSize="30sp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/textViewrowSubPais"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewrowSubTurno"
        android:textColor="#070707"
        android:textSize="30sp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"/>



</RelativeLayout>