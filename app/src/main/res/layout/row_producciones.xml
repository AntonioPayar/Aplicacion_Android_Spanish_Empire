<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewrowProID"
        android:textColor="#070707"
        android:layout_marginLeft="20dp"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewrowProPais"
        android:textColor="#070707"
        android:textSize="30sp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/textViewrowProID"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewrowProTurno"
        android:textColor="#070707"
        android:textSize="30sp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/textViewrowProPais"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewrowProPro"
        android:textColor="#070707"
        android:textSize="30sp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/textViewrowProTurno"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewrowProCant"
        android:textColor="#070707"
        android:textSize="30sp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/textViewrowProPartid"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewrowProPartid"
        android:textColor="#070707"
        android:textSize="30sp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>